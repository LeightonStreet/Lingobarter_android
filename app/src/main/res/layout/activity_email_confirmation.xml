<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.st.leighton.lingobarterclient.EmailConfirmation"

    android:background="@color/DarkGray"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Space
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    
    <TextView
        android:id="@+id/hx_email_title"
        android:textColor="@color/PaleTurquoise"
        android:text="@string/hx_email_title"
        android:textSize="25sp"
        android:gravity="center"

        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/hx_email_description"
            android:textSize="15sp"
            android:text="@string/hx_email_description"

            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/hx_email_text_email"
            android:textSize="15sp"
            android:textColor="@color/PaleTurquoise"

            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:text="@string/hx_user_email_confirmation_hint"
        android:textSize="15sp"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:layout_weight="2"
        android:background="@drawable/hx_background_color_change_login_btn"
        android:id="@+id/hx_email_button_resend"
        android:text="@string/hx_email_resend"

        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:layout_weight="2"
        android:background="@drawable/hx_background_color_change_login_btn"
        android:id="@+id/hx_email_button_confirm"
        android:text="@string/hx_email_confirm"

        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Space
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>
